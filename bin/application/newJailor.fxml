<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.NewJailor">
   <top>
      <AnchorPane prefHeight="720.0" prefWidth="1080.0" style="-fx-background-color: #2b3043;" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="409.0" layoutY="66.0" text="New Jailor" textFill="WHITE">
               <font>
                  <Font name="Bookman Old Style Bold" size="48.0" />
               </font>
            </Label>
            <TextField fx:id="newJailorName" alignment="CENTER" layoutX="324.0" layoutY="267.0" prefHeight="45.0" prefWidth="433.0" promptText="Name" style="-fx-background-radius: 100;">
               <font>
                  <Font name="Bookman Old Style" size="24.0" />
               </font>
            </TextField>
            <DatePicker fx:id="newJailorDob" layoutX="324.0" layoutY="355.0" onAction="#jailorDob" prefHeight="46.0" prefWidth="434.0" promptText="Date of Birth" />
            <Button layoutX="448.0" layoutY="509.0" mnemonicParsing="false" onAction="#newJailorUpdate" prefHeight="45.0" prefWidth="186.0" style="-fx-background-radius: 100; -fx-background-color: #fcbf62;" text="Done">
               <font>
                  <Font name="Bookman Old Style" size="24.0" />
               </font>
            </Button>
            <Button layoutX="53.0" layoutY="72.0" mnemonicParsing="false" onAction="#backToJailor" prefHeight="45.0" prefWidth="186.0" style="-fx-background-radius: 100; -fx-background-color: #fcbf62;" text="Back">
               <font>
                  <Font name="Bookman Old Style" size="24.0" />
               </font>
            </Button>
            <Label fx:id="msg" contentDisplay="CENTER" layoutX="494.0" layoutY="156.0" textFill="RED" visible="false">
               <font>
                  <Font name="Bookman Old Style Italic" size="18.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </top>
</BorderPane>
