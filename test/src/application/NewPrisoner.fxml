<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.NewPrisoner">
   <center>
      <AnchorPane prefHeight="720.0" prefWidth="1080.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="390.0" layoutY="43.0" text="New Prisoner" textAlignment="CENTER">
               <font>
                  <Font name="Be Vietnam ExtraBold" size="48.0" />
               </font>
            </Label>
            <Label layoutX="89.0" layoutY="185.0" text="Full Name" textAlignment="CENTER">
               <font>
                  <Font name="Be Vietnam Medium" size="24.0" />
               </font>
            </Label>
            <Label layoutX="89.0" layoutY="245.0" text="Date of Birth" textAlignment="CENTER">
               <font>
                  <Font name="Be Vietnam Medium" size="24.0" />
               </font>
            </Label>
            <Label layoutX="89.0" layoutY="294.0" text="Gender" textAlignment="CENTER">
               <font>
                  <Font name="Be Vietnam Medium" size="24.0" />
               </font>
            </Label>
            <Label layoutX="89.0" layoutY="351.0" text="Height" textAlignment="CENTER">
               <font>
                  <Font name="Be Vietnam Medium" size="24.0" />
               </font>
            </Label>
            <Label layoutX="89.0" layoutY="411.0" text="Blood Group" textAlignment="CENTER">
               <font>
                  <Font name="Be Vietnam Medium" size="24.0" />
               </font>
            </Label>
            <Label layoutX="89.0" layoutY="467.0" text="Cell No." textAlignment="CENTER">
               <font>
                  <Font name="Be Vietnam Medium" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="prisonerName" layoutX="260.0" layoutY="184.0" prefHeight="44.0" prefWidth="522.0" style="-fx-background-radius: 100;">
               <font>
                  <Font name="Be Vietnam Medium" size="18.0" />
               </font>
            </TextField>
            <RadioButton fx:id="prisonerMale" layoutX="260.0" layoutY="297.0" mnemonicParsing="false" onAction="#prisonerGender" prefHeight="34.0" prefWidth="142.0" text="Male">
               <font>
                  <Font size="24.0" />
               </font>
               <toggleGroup>
                  <ToggleGroup fx:id="gender" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="prisonerFemale" layoutX="507.0" layoutY="297.0" mnemonicParsing="false" onAction="#prisonerGender" prefHeight="34.0" prefWidth="142.0" text="Female" toggleGroup="$gender">
               <font>
                  <Font size="24.0" />
               </font>
            </RadioButton>
            <ChoiceBox fx:id="prisonerHeightIN" layoutX="506.0" layoutY="352.0" prefHeight="39.0" prefWidth="127.0" style="-fx-background-radius: 100;" />
            <ChoiceBox fx:id="prisonerHeightFT" layoutX="260.0" layoutY="349.0" prefHeight="39.0" prefWidth="127.0" style="-fx-background-radius: 100;" />
            <ChoiceBox fx:id="prisonerBGroup" layoutX="259.0" layoutY="408.0" prefHeight="39.0" prefWidth="127.0" style="-fx-background-radius: 100;" />
            <TextField fx:id="prisonerCell" layoutX="259.0" layoutY="463.0" prefHeight="44.0" prefWidth="128.0" style="-fx-background-radius: 100;">
               <font>
                  <Font name="Be Vietnam Medium" size="18.0" />
               </font>
            </TextField>
            <Button layoutX="457.0" layoutY="554.0" mnemonicParsing="false" onAction="#newConvict" prefHeight="51.0" prefWidth="183.0" style="-fx-background-radius: 100;" text="Next">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
            <Label fx:id="message" alignment="CENTER" layoutX="135.0" layoutY="126.0" prefHeight="35.0" prefWidth="827.0" textAlignment="CENTER" textFill="RED">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label layoutX="402.0" layoutY="351.0" text="ft" textAlignment="CENTER">
               <font>
                  <Font name="Be Vietnam Medium" size="24.0" />
               </font>
            </Label>
            <Label layoutX="643.0" layoutY="354.0" text="inches" textAlignment="CENTER">
               <font>
                  <Font name="Be Vietnam Medium" size="24.0" />
               </font>
            </Label>
            <DatePicker fx:id="prisonerDOB" editable="false" layoutX="259.0" layoutY="241.0" onAction="#selectDOB" prefHeight="42.0" prefWidth="244.0" promptText="Enter Date of Birth" />
         </children>
      </AnchorPane>
   </center>
</BorderPane>
